  "keywords": [
    "env",
    ".env",
    "environment",
    "variables",
    "settings",
    "node"
  ],
  "engines": {
    "node": ">=8"
  },
  "author": "Suthagar Kailayapathy <suthagar23.dev@gmail.com>",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APISquare/envone-ui"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",

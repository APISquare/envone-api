    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^3.1.0",
    "jsdom": "^15.2.1",
    "lint-staged": "~9.5.0",
    "mocha": "~7.2.0",
    "nyc": "^15.1.0",
    "sinon": "^7.5.0"
